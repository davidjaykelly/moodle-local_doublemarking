{{!
    @template local_doublemarking/grading_panel_extension

    Template to extend the standard grading panel with double marking elements.
    This is injected into the main grading app via JavaScript.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * doublemarking - Indicates if double marking is enabled
    * studentid - The ID of the student being graded
    * allocation - Marker allocation information
    * gradestatus - Grade status information
    * ratification - Ratification information (if applicable)
}}
{{#doublemarking}}
    <div class="local-doublemarking-extension">
        <div class="card mb-3">
            <div class="card-header">
                <h4 class="card-title m-0">{{#str}}doublemarkingstatus, local_doublemarking{{/str}}</h4>
            </div>
            <div class="card-body p-3">
                {{> local_doublemarking/marker_allocation }}
                
                {{> local_doublemarking/grade_status }}
                
                {{#ratification.isratifier}}
                    {{> local_doublemarking/ratification_panel }}
                {{/ratification.isratifier}}
            </div>
        </div>
    </div>
{{/doublemarking}}

